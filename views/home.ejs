<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Idle Gamble Factory</title>
    <link rel="stylesheet" href="/css/home.css" />
    <link rel="icon" href="/assets/Icon.png" />
    <!-- Add Matter.js library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/matter-js/0.19.0/matter.min.js"></script>
    <script src="/scripts/home.js" defer></script>
  </head>
  <body>
    <div class="game-container">
      <!-- Main Game Area -->
      <div class="game-area">
        <div class="score-display">
          <span>0</span>
        </div>
        <div class="clickable-area">
          <!-- Physics engine will render here -->
          <div id="money-signs"></div>
          <!-- Bumpers -->
          <div class="bumper bumper-1" data-effect="+1">+1</div>
          <div class="bumper bumper-2" data-effect="+1">+1</div>
          <div class="bumper bumper-3" data-effect="+1">+1</div>
          <div class="bumper bumper-4" data-effect="+1">+1</div>
          <div class="bumper bumper-5" data-effect="+1">+1</div>
          <div class="bumper bumper-6" data-effect="+1">+1</div>
          <div class="bumper bumper-7" data-effect="+1">+1</div>
          <div class="bumper bumper-8" data-effect="+1">+1</div>
          <!-- Spikes at the bottom -->
          <div class="spikes"></div>
        </div>
      </div>

      <!-- Sidebar with Stats and Upgrades -->
      <div class="sidebar">
        <div class="stats">
          <div class="bonus">
            <span>x2 Bonus</span>
          </div>
          <div class="current-income">
            <span>$1.0</span>
          </div>
          <div class="income-per-second">
            <span>~$0.7 p.s.</span>
          </div>
        </div>

        <div class="upgrades">
          <!-- Upgrade slots -->
          <div class="upgrade-slot"></div>
          <div class="upgrade-slot"></div>
          <div class="upgrade-slot"></div>
          <div class="upgrade-slot"></div>
          <div class="upgrade-slot"></div>
          <div class="upgrade-slot"></div>
          <div class="upgrade-slot"></div>
          <div class="upgrade-slot"></div>
          <div class="upgrade-slot"></div>
          <div class="upgrade-slot"></div>
          <div class="upgrade-slot"></div>
          <div class="upgrade-slot"></div>
        </div>

        <div class="special-upgrades">
          <!-- Bumper Upgrade -->
          <div class="bumper-upgrade upgrade-block">
            <span class="title">BUMPER UPGRADE</span>
            <span class="level">Level: 1</span>
            <span class="cost">Cost: $10</span>
            <button id="upgrade-bumper">Upgrade Bumper</button>
          </div>

          <!-- Base Income Upgrade -->
          <div class="base-income upgrade-block">
            <span class="title">BASE INCOME</span>
            <span>1 > 2</span>
            <span>$1</span>
            <div class="upgrade-button-container">
              <span id="base-income-cost">$10</span>
              <button id="upgrade-base-income">Upgrade Base Income</button>
            </div>
          </div>

          <!-- Speed Upgrade -->
          <div class="speed upgrade-block">
            <span class="title">SPEED</span>
            <span class="current-speed">100% > 105%</span>
            <!-- Updated to show spawn speed percentage -->
            <span class="cost" id="speed-cost">$10</span>
            <span class="spawn-time">Spawn Time: 3.0s</span>
            <!-- Display spawn time in seconds -->
            <button id="upgrade-speed">Upgrade Speed</button>
          </div>
        </div>

        <div class="next-level">
          <span>NEXT LEVEL</span>
          <span>$25000</span>
        </div>

        <div class="reset-game">
          <button id="reset-game">Reset Game</button>
        </div>
      </div>
    </div>
  </body>
</html>
